<Page x:Class="TeacherBook.Windowed.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeacherBook.Windowed"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Регистрация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text=" Введите логин:"/>
            <TextBox x:Name="LoginBlock"/>
            <TextBlock Text=" Введите пароль:"/>
            <PasswordBox x:Name="PasswordBlock"/>
            <TextBlock Text=" Повториете пароль:"/>
            <PasswordBox x:Name="PasswordTwoBlock"/>
            <Button x:Name="СreateAccountButton" Content="Создать" Click="СreateAccountButton_Click"/>
         
        </StackPanel>
    </Grid>
</Page>

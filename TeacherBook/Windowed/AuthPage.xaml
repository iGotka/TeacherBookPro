<Page x:Class="TeacherBook.Windowed.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeacherBook.Windowed"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Автризация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="LoginBlock" TextChanged="LoginBlock_TextChanged"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="PasswordBlock"/>
            <Button x:Name="AuthButton" Content="Войти" Click="AuthButton_Click"/>
            <Button x:Name="RegButton" Content="Регистрация" Click="RegButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
